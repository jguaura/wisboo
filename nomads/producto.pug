doctype html
html
    head
        title NOMADS - Commuter Briefcase
        link(rel="preconnect", href="https://fonts.gstatic.com")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Open+Sans+Condensed:wght@700&display=swap")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,600;0,700;1,400&display=swap")
        link(rel="stylesheet", href="../../styles/product.style.css")
    body
        .product
            nav.nomads-nav
                .nomads-nav__list
                    ul
                        li
                            a(href="#") inicio
                        li
                            a(href="#") comprar
                        li
